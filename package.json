{
  "name": "povium",
  "version": "1.0.0",
  "description": "포비엄은 누구나 글을 쓰고 업로드할 수 있는 출판 플랫폼입니다.",
  "main": "",
  "dependencies": {
    "autoprefixer": "^8.6.3",
    "node-sass": "^4.9.0",
    "postcss-cli": "^5.0.1"
  },
  "devDependencies": {
    "webpack": "^4.12.0",
    "webpack-cli": "^3.0.8"
  },
  "scripts": {
    "build": "webpack --config webpack.config.js",
    "build:sass": "node-sass -wr public_html/src/scss/ -o public_html/src/build/css/",
    "build:sass:postcss": "node-sass -wr public_html/src/scss -o public_html/src/build/css && postcss public_html/src/build/css --use autoprefixer -d public_html/src/build/css",
    "autoprefix": "postcss public_html/src/build/css --use autoprefixer -d public_html/src/build/css",
    "watch:sass": "nodemon -e scss -x \"npm run build:sass\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/DesignAndDevelop/Povium.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/DesignAndDevelop/Povium/issues"
  },
  "homepage": "https://github.com/DesignAndDevelop/Povium#readme"
}
